<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".HomeFragment">

    <TextView
        android:text="Quantos pokemons deseja expor (mín. 3):"
        android:textAlignment="center"

        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_qtd"
            android:inputType="number"

            android:layout_weight="2"
            android:minEms="3"
            android:maxEms="20"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_qtd"
            android:text="Gerar aleatoriamente"

            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="Buscar a partir de qual índice (máx. 895):"
        android:textAlignment="center"

        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_indice"
            android:inputType="number"
            android:enabled="false"

            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_indice"
            android:text="Gerar aleatoriamente"
            android:enabled="false"

            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>