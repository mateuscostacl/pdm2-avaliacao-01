<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_imagem"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FlorianÃ³polis"
        android:id="@+id/tv_nome"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_imagem">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/SC" android:id="@+id/tv_tipo"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_nome">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Capital de Santa Catarina"
        android:id="@+id/tv_altura"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/tv_nome"
        android:layout_toRightOf="@+id/iv_imagem">
    </TextView>
</RelativeLayout>